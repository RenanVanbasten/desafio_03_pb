{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // Garante compatibilidade com módulos ES.
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true, // Ativa checagem de tipos mais rigorosa.
    "strictNullChecks": true, // Garante segurança contra valores null/undefined.
    "noImplicitAny": true, // Evita usar `any` implicitamente.
    "strictBindCallApply": true, // Garante segurança em chamadas de métodos.
    "forceConsistentCasingInFileNames": true, // Evita problemas de case em nomes de arquivos.
    "noFallthroughCasesInSwitch": true, // Garante segurança em switch cases.
    "paths": {
      "@/*": ["src/*"] // Permite criar atalhos para paths.
    }
  },
  "include": ["src"], // Certifique-se de incluir os arquivos fonte.
  "exclude": ["node_modules", "dist"] // Exclui arquivos gerados e dependências.
}
